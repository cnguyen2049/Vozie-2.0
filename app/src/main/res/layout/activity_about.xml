<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="6dp"
        android:background="@color/red">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView android:id="@+id/menu_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_button"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"/>
            <ImageView android:id="@+id/vozie_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/vozie_title"
                android:gravity="center_vertical"
                android:layout_weight="3" />
            <ImageView android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/settings_button"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.carprototype.carapp.AboutActivity"
            android:weightSum="20"
            android:orientation="vertical">
            <ImageView android:id="@+id/about_vozie"
                android:src="@drawable/vozie_white"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:background="#FFFFFF"/>
            <TextView android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:fontFamily="sans-serif"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textSize="12sp"/>
            <TextView android:id="@+id/description_text2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:fontFamily="sans-serif"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="12sp"
                android:textAlignment="center"/>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:weightSum="9"
                android:gravity="center">
                <LinearLayout android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="4"
                    android:gravity="bottom">
                    <ImageView android:id="@+id/facebook_image"
                        android:src="@drawable/facebook"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="2"/>
                    <TextView android:layout_height="0dp"
                        android:layout_width="wrap_content"
                        android:text="@string/about_facebook"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="4"
                    android:gravity="bottom">
                    <ImageView android:id="@+id/play_store_image"
                        android:src="@drawable/play_store"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="2"/>
                    <TextView android:layout_height="0dp"
                        android:layout_width="wrap_content"
                        android:text="@string/about_play_store"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="4"
                    android:gravity="bottom">
                    <ImageView android:id="@+id/twitter_image"
                        android:src="@drawable/twitter"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="2"/>
                    <TextView android:layout_height="0dp"
                        android:layout_width="wrap_content"
                        android:text="@string/about_twitter"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/drawer_list"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#000"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>