<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carprototype.carapp.AboutActivity"
    android:weightSum="20"
    android:orientation="vertical">
    <ImageView android:id="@+id/about_vozie"
        android:src="@drawable/vozie"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:background="#A03131"/>
    <TextView android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="12sp"/>
    <TextView android:id="@+id/description_text2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="12sp"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="9"
        android:gravity="center">
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="4"
            android:gravity="bottom">
            <ImageView android:id="@+id/facebook_image"
                android:src="@drawable/facebook"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="2"/>
            <TextView android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:text="Like on Facebook"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="4"
            android:gravity="bottom">
            <ImageView android:id="@+id/play_store_image"
                android:src="@drawable/play_store"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="2"/>
            <TextView android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:text="Rate on Play Store"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="4"
            android:gravity="bottom">
            <ImageView android:id="@+id/twitter_image"
                android:src="@drawable/twitter"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="2"/>
            <TextView android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:text="Follow On Twitter"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
